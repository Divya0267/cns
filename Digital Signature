import java.security.*;
import java.util.Scanner;

public class DigitalSignatureSimple {

    public static void main(String[] args) throws Exception {

        // Read input text
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter text to sign: ");
        String message = sc.nextLine();

        // 1. Generate Key Pair (Public & Private Keys)
        KeyPairGenerator keyGen = KeyPairGenerator.getInstance("RSA");
        keyGen.initialize(2048);     // key size
        KeyPair pair = keyGen.generateKeyPair();

        PrivateKey privateKey = pair.getPrivate();
        PublicKey publicKey = pair.getPublic();

        // 2. Create Signature object (SHA256 with RSA)
        Signature sign = Signature.getInstance("SHA256withRSA");

        // 3. Sign the message
        sign.initSign(privateKey);
        sign.update(message.getBytes());
        byte[] digitalSignature = sign.sign();

        // Print signature in hex
        System.out.println("\nDigital Signature (Hex):");
        for (byte b : digitalSignature) {
            System.out.printf("%02x", b);
        }

        // 4. Verify the signature
        Signature verifySign = Signature.getInstance("SHA256withRSA");
        verifySign.initVerify(publicKey);
        verifySign.update(message.getBytes());

        boolean isVerified = verifySign.verify(digitalSignature);

        System.out.println("\n\nSignature Verification: " + isVerified);
    }
}
