import javax.crypto.SecretKey;
public class AESECBExample {
    public static void main(String[] args) {
        try {
            String plaintext = "HelloECBMode";
            // Generate AES key
            SecretKey key = AESECBMode.generateKey();
            // Encrypt
            String encrypted = AESECBMode.encryptECB(plaintext, key);
            System.out.println("Plaintext: " + plaintext);
            System.out.println("Encrypted (Base64): " + encrypted);
            // Decrypt
            String decrypted = AESECBMode.decryptECB(encrypted, key);
            System.out.println("Decrypted: " + decrypted);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
OUTPUT:
Plaintext: HelloECBMode
Encrypted (Base64): dCqFq3v6IDzdJNu0b5D0qQ==
Decrypted: HelloECBMode
